<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto">    <TextView        android:id="@+id/tv_input"        android:text="测试代码"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <Button        android:id="@+id/btn_ensure"        app:layout_constraintTop_toBottomOf="@id/tv_input"        android:text="确定"        android:layout_marginTop="10dp"        app:layout_constraintLeft_toLeftOf="parent"        android:layout_width="100dp"        android:layout_height="wrap_content" />    <Button        android:id="@+id/btn_cancel"        android:text="取消"        android:layout_marginTop="10dp"        app:layout_constraintTop_toBottomOf="@id/tv_input"        app:layout_constraintRight_toRightOf="parent"        android:layout_width="100dp"        android:layout_height="wrap_content" /></android.support.constraint.ConstraintLayout>